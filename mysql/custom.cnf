[client]
default-character-set = utf8mb4

[mysql]
default-character-set = utf8mb4

[mysqld]
collation-server     = utf8mb4_general_ci
init-connect='SET NAMES utf8mb4'
character-set-server = utf8mb4

slow_query_log = true
slow_query_log_file = "/var/lib/mysql/mysql-slow.log"
long_query_time = 1
log-queries-not-using-indexes